<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        tools:layout="@layout/fragment_count_down"
        android:id="@+id/frag1"
        android:name="com.codingblocks.staticfragments.CountDownFragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <fragment
        tools:layout="@layout/fragment_count_up"
        android:id="@+id/frag2"
        android:name="com.codingblocks.staticfragments.CountUpFragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>